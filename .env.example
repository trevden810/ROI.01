# The Odds API Configuration
# Get your free API key at: https://the-odds-api.com/
ODDS_API_KEY=your_api_key_here

# Sports to Monitor (comma-separated)
# Available sports: americanfootball_nfl, basketball_nba, baseball_mlb, icehockey_nhl
ODDS_API_SPORTS=americanfootball_nfl,basketball_nba

# Odds Markets to Fetch
# Options: h2h (moneyline), spreads, totals
ODDS_MARKETS=h2h,spreads,totals

# Odds Regions (bookmakers)
# Options: us, uk, eu, au
ODDS_REGIONS=us

# Analysis Settings
MIN_ARBITRAGE_PROFIT=2.0
MIN_VALUE_BET_EDGE=5.0
MAX_ODDS_AGE_SECONDS=60

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true

# Data Storage
DATABASE_PATH=data/betting_data.sqlite

# API Rate Limiting
REQUESTS_PER_MONTH=500
